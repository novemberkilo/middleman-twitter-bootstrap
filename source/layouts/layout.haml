<!DOCTYPE html>
%html{ :lang => 'en' }

%head
  %meta{:charset => "utf-8"}
  %meta{'http-equiv' => "X-UA-Compatible", :content =>"IE=edge,chrome=1"}

  -# Pull in the page title
  %title= @title

  %meta{:name => "description", :content => ""}
  %meta{:name => "author", :content => ""}
  %meta{:name =>"viewport", :content => "width=device-width, initial-scale=1.0"}

  -# Place favicon.ico and apple-touch-icon.png in the root directory

  = stylesheet_link_tag "screen"

%body
  .container
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{ 'data-toggle' => "collapse",  "data-target" => ".nav-collapse" }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{ "href" =>"#"} Your Site Name
          .nav-collapse.collapse
            %ul.nav
              %li.active
                %a{ "href" =>"#" } Home
              %li
                %a{ "href" => "#"} About
              %li
                %a{ "href" => "#" } Contact
    %h1= @title
    ~ yield

    %footer
      %p &copy; #{copyright_years(2011)} MiddlemanTwitterBoostrapUser

  = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"
  :javascript
    window.jQuery || document.write('<script src="/javascripts/libs/jquery-1.8.3.min.js"><\/script>')

  = javascript_include_tag "plugins", "script"
  = javascript_include_tag "bootstrap.js"
  = javascript_include_tag "highlight.pack"
  = stylesheet_link_tag "solarized_light"
  %script hljs.initHighlightingOnLoad();


